<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mid_padding_1"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="@dimen/mid_padding_1"
    app:cardBackgroundColor="?attr/shimmerColor"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <View
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/dim_10dp"
            android:background="@drawable/bg_photo_item" />

        <View
            android:id="@+id/title"

            android:layout_width="@dimen/dim_60dp"
            android:layout_height="17dp"
            android:layout_marginStart="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_strip_round" />

        <View
            android:id="@+id/subtitle"
            android:layout_width="@dimen/dim_26dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_strip_round" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>